{
    "extends": [
        "next/core-web-vitals"
    ],
    "rules": {
        "no-console": "warn",
        "no-unused-vars": "warn",
        "prefer-const": "error",
        "no-var": "error",
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "off",
        "react/no-unescaped-entities": "warn",
        "@next/next/no-img-element": "warn",
        "import/no-unused-modules": "off"
    },
    "ignorePatterns": [
        "node_modules/",
        ".next/",
        "out/",
        "build/"
    ]
}